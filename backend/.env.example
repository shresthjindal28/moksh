PORT=4000
NODE_ENV=development
# PostgreSQL (Docker: use your container's user/password)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/moksh

JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Optional: Cloudinary for image uploads (leave empty = local uploads in backend/uploads)
# Dashboard: https://cloudinary.com/console
# Option A – single URL:
# CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
# Option B – individual vars:
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://app.moksh.com,https://moksh.com

# Seed first admin (optional, for npm run seed)
# SEED_ADMIN_EMAIL=admin@moksh.com
# SEED_ADMIN_PASSWORD=admin123
# SEED_ADMIN_NAME=Admin
